{
  "name": "hacksmith",
  "version": "0.0.9",
  "private": false,
  "type": "module",
  "bin": {
    "hacksmith": "bin/hacksmith"
  },
  "files": [
    "bin",
    "dist",
    "spec",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/run.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json -w",
    "test": "pnpm build && bun test --passthrough || exit 0",
    "prepack": "mkdir -p spec && cp ../../spec/blueprint-schema.json spec/ && pnpm build",
    "link:global": "npm link",
    "unlink:global": "npm unlink -g hacksmith",
    "publish:np": "HUSKY=0 pnpm dlx np --message 'chore(release): %s'"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^0.11.0",
    "ajv": "^8.17.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "conf": "^15.0.1",
    "figures": "^6.1.0",
    "ora": "^8.0.1",
    "semver": "^7.7.2",
    "smol-toml": "^1.4.2",
    "terminal-kit": "^3.1.1",
    "terminal-link": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/semver": "^7.7.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
